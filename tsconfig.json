{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",  // ✅ Correction
    "resolveJsonModule": true,   // ✅ Pour supporter les imports JSON
    "allowJs": true,             // ✅ Permet d'importer du JS
    "baseUrl": ".",              // ✅ Corrigé pour inclure `server/`
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*", "./server/*"],  // ✅ Ajout de `server/`
      "@shared/*": ["./shared/*"],              // ✅ OK pour `shared/`
      "@server/*": ["./server/*"]               // ✅ Ajout d'un alias spécifique pour le serveur
    }
  }
}
