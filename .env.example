# ============================================================================
# CONFIGURATION EXEMPLE - REMPLACER PAR VOS VRAIES VALEURS
# ============================================================================

# Configuration Supabase (sécurisé - clés publiques)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Configuration API (production)
VITE_API_URL=https://your-api-domain.com
VITE_SOCKET_URL=https://your-socket-domain.com

# Configuration App
VITE_APP_URL=https://your-app-domain.com

# ============================================================================
# CONFIGURATION GOOGLE CALENDAR (sécurisé - Client ID public)
# ============================================================================
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_REDIRECT_URI=https://your-app-domain.com/auth/google/callback

# ============================================================================
# CONFIGURATION FEATURE FLAGS
# ============================================================================
VITE_GOOGLE_CALENDAR_ENABLED=true
VITE_COLLABORATIVE_EVENTS_ENABLED=true
VITE_NOTIFICATIONS_ENABLED=true

# ============================================================================
# CONFIGURATION ANALYTICS
# ============================================================================
VITE_ANALYTICS_ENABLED=true

# ============================================================================
# CONFIGURATION SENTRY (CLIENT)
# ============================================================================
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_ALLOWED_DOMAINS=your-app-domain.com

# ============================================================================
# CONFIGURATION SERVEUR (NE PAS EXPOSER AU CLIENT)
# ============================================================================

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=https://your-api-domain.com/api/auth/google/callback

# Configuration de synchronisation
GOOGLE_CALENDAR_SYNC_INTERVAL=300000
GOOGLE_CALENDAR_DEFAULT_TIMEZONE=Europe/Paris
GOOGLE_CALENDAR_DEFAULT_REMINDER_MINUTES=15

# Configuration des notifications
GOOGLE_CALENDAR_NOTIFICATIONS_ENABLED=true
GOOGLE_CALENDAR_EMAIL_NOTIFICATIONS=true
GOOGLE_CALENDAR_PUSH_NOTIFICATIONS=true

# Configuration des réunions
GOOGLE_CALENDAR_MEETING_DEFAULT_PLATFORM=google_meet
GOOGLE_CALENDAR_AUTO_CREATE_MEETINGS=true

# Configuration de sécurité
GOOGLE_CALENDAR_WEBHOOK_SECRET=your-webhook-secret-here
GOOGLE_CALENDAR_API_QUOTA_LIMIT=10000

# Configuration Session
SESSION_SECRET=your-session-secret-here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Configuration Supabase
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
SUPABASE_KEY=your-supabase-anon-key-here

# Configuration de la base de données
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=your-db-host.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password-here

# Configuration du serveur
PORT=5001
NODE_ENV=production

# Configuration CORS
CORS_ORIGIN=https://your-app-domain.com

# Configuration Socket.IO (MESSAGERIE)
SOCKET_CORS_ORIGIN=https://your-app-domain.com

# Configuration JWT
JWT_SECRET=your-jwt-secret-here

# Configuration des logs
LOG_LEVEL=info

# Configuration Redis (CACHE ET QUEUES)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0
REDIS_KEY_PREFIX=your-app-name:

# Configuration Sentry (SERVEUR)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_TOKEN=your-sentry-token-here
