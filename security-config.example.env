# Configuration Supabase
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Configuration JWT (GÉNÉRER UNE CLÉ SÉCURISÉE)
JWT_SECRET_KEY=your_very_long_random_jwt_secret_here
JWT_EXPIRATION=3600

# Configuration de l'application
NODE_ENV=production
DEBUG_MODE=false

# Configuration de sécurité
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Configuration de monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Configuration de base de données
DATABASE_URL=your_database_url_here

# Configuration de paiement (si applicable)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Configuration d'email (SMTP Gmail)
# Compte Gmail dédié pour l'application Profitum
# Pour générer un mot de passe d'application : https://myaccount.google.com/apppasswords
# Sélectionner "Autre (nom personnalisé)" → "Profitum App"
# Format du mot de passe : 16 caractères sans espaces (ex: itmrxbpvfienjouu)

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=profitum.app@gmail.com
SMTP_PASS=your_smtp_password_here
SMTP_FROM=Profitum <profitum.app@gmail.com>

# Configuration de sécurité avancée
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
SESSION_TIMEOUT_MS=900000
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MS=900000 
# Gmail API Configuration
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

