# ============================================================================
# CONFIGURATION GOOGLE CALENDAR - PROFITUMV2
# ============================================================================

# Google OAuth2 - ProfitumV2
# ⚠️ ATTENTION: Remplacez ces valeurs par vos vraies clés Google OAuth2
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# ============================================================================
# CONFIGURATION SUPABASE
# ============================================================================

SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_ANON_KEY=votre_anon_key
SUPABASE_SERVICE_ROLE_KEY=votre_service_role_key

# ============================================================================
# CONFIGURATION SERVEUR
# ============================================================================

PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# ============================================================================
# CONFIGURATION SOCKET.IO (MESSAGERIE)
# ============================================================================

SOCKET_CORS_ORIGIN=http://localhost:5173

# ============================================================================
# CONFIGURATION SÉCURITÉ
# ============================================================================

JWT_SECRET=votre_jwt_secret_tres_securise
SESSION_SECRET=votre_session_secret_tres_securise

# ============================================================================
# CONFIGURATION EMAIL (SMTP Gmail)
# ============================================================================
# Compte Gmail dédié pour l'application Profitum
# Pour générer un mot de passe d'application : https://myaccount.google.com/apppasswords
# Sélectionner "Autre (nom personnalisé)" → "Profitum App"

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=profitum.app@gmail.com
SMTP_PASS=votre_mot_de_passe_application_16_caracteres
SMTP_FROM=Profitum <profitum.app@gmail.com>
# ============================================================================
# CONFIGURATION GMAIL API (Réception emails)
# ============================================================================
# OAuth2 credentials pour lire les emails entrants via Gmail API
# Guide: docs/GMAIL_API_SETUP.md

GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here
GMAIL_USER_EMAIL=profitum.app@gmail.com

